    <decisions>
        <name>Won_or_Lost</name>
        <label>Won or Lost</label>
        <locationX>252</locationX>
        <locationY>240</locationY>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>Decision_Won</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Stage</leftValueReference>
