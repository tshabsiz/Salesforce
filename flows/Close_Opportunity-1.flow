    <description>Visual Workflow used to close an opportunity</description>
    <formulas>
        <description>Clean error message for user to see</description>
        <name>ErrorMessage</name>
        <dataType>String</dataType>
        <expression>IF(
FIND(&quot;This error occurred:&quot;, {!$Flow.FaultMessage} ) &gt; 0,
MID(
    {!$Flow.FaultMessage} ,
    FIND(&quot;This error occurred:&quot;, {!$Flow.FaultMessage} ) + 20,
    LEN({!$Flow.FaultMessage}) - FIND(&quot;This error occurred:&quot;, {!$Flow.FaultMessage} )
),
{!$Flow.FaultMessage}
)</expression>
    </formulas>
